{
  "name": "folder-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for folder operations and file system access",
  "type": "module",
  "main": "dist/mcp-server.js",
  "bin": {
    "folder-mcp": "dist/src/interfaces/cli/folder-mcp.js"
  },
  "scripts": {
    "preinstall": "node -e \"const v=process.version.slice(1).split('.'); if(+v[0]<20||(+v[0]===20&&+v[1]<0)) throw new Error('Node.js >=20.0.0 required')\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "config": "tsx src/interfaces/cli/folder-mcp.ts config",
    "tuidemo": "tsx src/interfaces/tui-ink-demo/index.tsx",
    "tui": "tsx src/interfaces/tui-ink/index.tsx",
    "lint": "eslint src tests --ext .ts,.tsx",
    "lint:fix": "eslint src tests --ext .ts,.tsx --fix",
    "test:websocket": "node test-websocket.js",
    "test:daemon": "node test-daemon.js",
    "test-embeddings": "node dist/src/interfaces/cli/index.js test-embeddings",
    "test:embedding:python": "vitest run tests/integration/services/python-embeddings",
    "test:embedding:ollama": "vitest run tests/integration/services/ollama-embeddings",
    "test:embedding:comparison": "npm run test:embedding:python && npm run test:embedding:ollama",
    "test:embedding:real-python": "vitest run tests/real-integration/embedding-real.test.ts",
    "test:embedding:real-ollama": "vitest run tests/real-integration/embedding-real-ollama.test.ts",
    "test:embedding:real-comparison": "npm run test:embedding:real-python && npm run test:embedding:real-ollama",
    "debug:env": "node -e \"console.log('Node:', process.version, '| Platform:', process.platform, '| Arch:', process.arch, '| npm:', process.env.npm_version || 'unknown')\"",
    "debug:info": "node scripts/debug-info.cjs",
    "test": "npm run debug:env && vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:search:real-data": "vitest run tests/integration/workflows/search.test.ts -t 'Real Data Search'",
    "test:hot-reload": "vitest run tests/integration/workflows/hot-reload.test.ts",
    "test:workflows": "vitest run tests/integration/workflows",
    "test:e2e": "vitest run tests/e2e",
    "test:architectural": "vitest run tests/architectural",
    "test:fast": "vitest run tests/unit tests/integration",
    "test:real": "vitest run tests/real-integration",
    "test:python": "vitest run tests/integration/services/python-embeddings.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:performance": "vitest run tests/performance",
    "test:domain": "vitest run tests/unit/domain",
    "test:application": "vitest run tests/unit/application",
    "test:infrastructure": "vitest run tests/unit/infrastructure",
    "test:interfaces": "vitest run tests/unit/interfaces",
    "test:watch:unit": "vitest tests/unit",
    "test:watch:integration": "vitest tests/integration",
    "test:ci": "vitest run --reporter=junit --outputFile=test-results.xml"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "file-system",
    "folder-operations",
    "ai-tools",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/commander": "^2.12.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.0.0",
    "@types/pdf-parse": "^1.1.5",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@typescript-eslint/typescript-estree": "^8.39.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/chokidar": "^2.1.7",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.1.8",
    "@types/ws": "^8.18.1",
    "@types/xlsx": "^0.0.35",
    "@types/xml2js": "^0.4.14",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "faiss-node": "^0.5.1",
    "glob": "^11.0.2",
    "ink": "^6.0.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.9.1",
    "pdf-parse": "^1.1.1",
    "pizzip": "^3.2.0",
    "react": "^19.1.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "strip-ansi": "^7.1.0",
    "ws": "^8.18.3",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2",
    "yaml": "^2.8.0"
  }
}
