{
  "name": "folder-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for folder operations and file system access",
  "type": "module",
  "main": "dist/mcp-server.js",
  "bin": {
    "folder-mcp": "dist/interfaces/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "tui": "tsx src/interfaces/tui-ink/index.tsx",
    "tui:testred": "tsx src/interfaces/tui-ink/testred.tsx",
    "tui:demo": "tsx src/interfaces/tui-ink/examples/runDemo.tsx",
    "test-embeddings": "node dist/cli.js test-embeddings",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:search:real-data": "vitest run tests/integration/workflows/search.test.ts -t 'Real Data Search'",
    "test:hot-reload": "vitest run tests/integration/workflows/hot-reload.test.ts",
    "test:workflows": "vitest run tests/integration/workflows",
    "test:e2e": "vitest run tests/e2e",
    "test:architectural": "vitest run tests/architectural",
    "test:performance": "vitest run tests/performance",
    "test:domain": "vitest run tests/unit/domain",
    "test:application": "vitest run tests/unit/application",
    "test:infrastructure": "vitest run tests/unit/infrastructure",
    "test:interfaces": "vitest run tests/unit/interfaces",
    "test:watch:unit": "vitest tests/unit",
    "test:watch:integration": "vitest tests/integration",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=junit --outputFile=test-results.xml"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "file-system",
    "folder-operations",
    "ai-tools",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.0.0",
    "@types/pdf-parse": "^1.1.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/chokidar": "^2.1.7",
    "@types/js-yaml": "^4.0.9",
    "@types/react": "^19.1.8",
    "@types/xlsx": "^0.0.35",
    "@types/xml2js": "^0.4.14",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "faiss-node": "^0.5.1",
    "glob": "^11.0.2",
    "ink": "^6.0.0",
    "js-yaml": "^4.1.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.9.1",
    "pdf-parse": "^1.1.1",
    "pizzip": "^3.2.0",
    "react": "^19.1.0",
    "xlsx": "^0.18.5",
    "xml2js": "^0.6.2"
  }
}
